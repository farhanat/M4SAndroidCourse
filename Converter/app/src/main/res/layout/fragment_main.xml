<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="farhanatou.ucer.converter.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="#938d8d">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_margin="20dp"
        android:text="From"
        android:id="@+id/smtv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#34adc0"
        android:textColor="#d36c17"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                                 miles"
        android:id="@+id/smtv11"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText"
        android:background="#34adc0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to"
        android:id="@+id/smtv2"
        android:layout_below="@+id/smtv1"
        android:layout_alignEnd="@+id/smtv1" />

    <EditText
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/smtv2"
        android:textColor="#d36c17"
        android:layout_centerHorizontal="true"
        android:background="#34adc0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                              km"
        android:id="@+id/smtv22"
        android:background="#34adc0"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignEnd="@+id/smtv11"
        android:layout_alignBottom="@+id/editText2"
        android:layout_toEndOf="@+id/editText2"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:elevation="@dimen/fab_margin"
        android:src="@drawable/icon1"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/textView"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#d36c17" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetbtn"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
